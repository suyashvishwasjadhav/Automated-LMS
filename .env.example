# ========================================
# TEMPLATE FOR ENVIRONMENT VARIABLES
# ========================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# API Keys
GROQ_API_KEY=your_groq_api_key_here
DEEPSEEK_API_KEY=your_deepseek_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Database (Local Development)
DATABASE_URL=postgresql://postgres:password@localhost:5432/automate

# Database (GCP Production - will be different)
# DATABASE_URL=postgresql://USER:PASSWORD@/DATABASE?host=/cloudsql/PROJECT:REGION:INSTANCE

# Session Secret (Generate a strong random string)
SESSION_SECRET=generate_a_strong_random_secret_here

# SMTP Email Configuration
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_client_secret

# GCP Configuration (for production)
GCP_PROJECT_ID=your_gcp_project_id
GCP_BUCKET_NAME=your_bucket_name
GOOGLE_APPLICATION_CREDENTIALS=path_to_service_account_json

# Port (Cloud Run will set this automatically)
PORT=8080
